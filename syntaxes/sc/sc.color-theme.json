{
	"name": "smallLang-spec-theme",
	"type": "dark",
	"include": "./sc/sc.dark_plus.json",
	"colors": {
		"editor.foreground": "#D4D4D4"
	},
	"tokenColors": [
		{
			"name": "proc / pred / aux / pre / post / enum / type / wp / def",
			"scope": [
				"keyword.control.slspec"
			],
			"settings":{
				"foreground": "",
				"fontStyle": "italic"
			}
		},
		{
			"name": "if  / fi / while / endwhile / skip / :=",
			"scope": [
				"keyword.function.slspec"
			],
			"settings":{
				"fontStyle": "italic",
				"foreground": ""
			}
		},
		{
			"name": "∑ | sum / ∏ | prod",
			"scope": [
				"support.function.slspec"
			],
			"settings":{
				"fontStyle": "italic bold",
				"foreground": ""
			}
		},
		{
			"name": "then  / else / do",
			"scope": [
				"keyword.function.inner.slspec"
			],
			"settings":{
				"fontStyle": "",
				"foreground": ""
			}
		},
		{
			"name": "from / to / for",
			"scope": [
				"support.function.inner.slspec"
			],
			"settings":{
				"fontStyle": "",
				"foreground": ""
			}
		},
		{
			"name": "in / out / inout",
			"scope": [
				"variable.parameter.slspec"
			],
			"settings": {
				"fontStyle": "",
				"foreground": ""
			}
		},
		{
			"name": "ℤ / ℝ / Char / Bool / T / ⨉ ",
			"scope": [
				"entity.name.type.slspec"
			],
			"settings": {
				"fontStyle": "",
				"foreground": ""
			}
		},
		{
			"name": "seq[]",
			"scope": [
				"entity.name.type.seq.slspec"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": ""
			}
		},
		{
			"name": "true / false / ⊥",
			"scope": [
				"constant.language.slspec"
			],
			"settings": {
				"fontStyle": "",
				"foreground": ""
			}
		},
		
		{
			"name": "declaración de funcion",
			"scope": [
				"entity.name.function.slspec"
			],
			"settings":{
				"fontStyle": "",
				"foreground": ""
			}
		},
		{
			"name": "declaración de variable",
			"scope": [
				"variable.other.readwrite.slspec"
			],
			"settings":{
				"fontStyle": "",
				"foreground": ""
			}
		},
		{
			"name": "números",
			"scope": [
				"constant.numeric.slspec"
			],
			"settings": {
				"fontStyle": "",
				"foreground": ""
			}
		},
		{
			"name": "carácteres",
			"scope": [
				"constant.character.slspec"
			],
			"settings": {
				"fontStyle": "",
				"foreground": ""
			}
		},
		{
			"name": "operadores lógicos",
			"scope": [
				"keyword.operator.logic.slspec"
			],
			"settings": {
				"fontStyle": "",
				"foreground": "#f6386e"
			}
		},
		{
			"name": "operadores matemáticos",
			"scope": [
				"keyword.operator.math.slspec"
			],
			"settings": {
				"fontStyle": "",
				"foreground": ""
			}
		},
		{
			"name": "parentesis",
			"scope": [
				"punctuation.parenthesis.slspec"
			],
			"settings": {
				"fontStyle": "",
				"foreground": "#ec96af"
			}
		},
		{
			"name": "comentario multilínea",
			"scope": [
				"comment.block.slspec"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#546E7A"
			}
		},
		{
			"name": "comentario de línea",
			"scope": [
				"comment.line.slspec",
				"comment.line.slconfig"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#546E7A"
			}
		},


		{
			"name": "scheme selector $$",
			"scope": [
				"keyword.control.slconfig"
			],
			"settings":{
				"foreground": "#299e12",
				"fontStyle": ""
			}
		},
		{
			"name": "delimitadores",
			"scope": [
				"keyword.operator.slconfig"
			],
			"settings": {
				"fontStyle": "",
				"foreground": "#2088b8"
			}
		}
	]
}
